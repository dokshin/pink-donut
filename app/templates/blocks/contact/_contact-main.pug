section.contact-main
    .wrapper-contact
        +section-title('contact', 'CONTACT')
        form.contact-form
            label(for="contact-name")="NAME"
            input.contact-form-name(type="text" id="contact-name")
            label(for="contact-email")="EMAIL"
            input.contact-form-email(type="email" id="contact-email")
            label(for="contact-message")="MESSAGE"
            textarea.contact-form-message
            .contact-form-button-box    
                input.contact-form-button(type="submit" value="SEND")
                +icon('underline', 'contact-form-button-box-bg')
                
        include _contact-info
            